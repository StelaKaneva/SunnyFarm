@model RegisterFormModel

@{
    ViewBag.Title = "Регистрация";
}

<div class="row">
    <div class=" col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="UserName">Потребителско име</label>
                <input class="form-control" asp-for="UserName">
                <span asp-validation-for="UserName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Имейл</label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Парола</label>
                <input class="form-control" asp-for="Password" type="password">
                <span asp-validation-for="Password" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName">Име и фамилия</label>
                <input class="form-control" asp-for="FullName">
                <span asp-validation-for="FullName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone">Телефон</label>
                <input class="form-control" asp-for="Phone">
                <span asp-validation-for="Phone" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Адрес</label>
                <input class="form-control" asp-for="Address">
                <span asp-validation-for="Address" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Регистрация" />
        </form>
    </div>
</div>